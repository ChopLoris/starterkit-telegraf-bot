{
    "ts-node": {
      "files": true
    },
    "compilerOptions": {
      "target": "ES2021",
      "module": "CommonJS",
      "esModuleInterop": true,
      "noEmit": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
        "@/*": ["/*"],
        "@commands/*": ["commands/*"],
        "@types/*": ["types/*"],
        "@lib/*": ["lib/*"]
      }
    },
    "include": ["./", "@types/**.d.ts"],
    "exclude": ["node_modules"]
}
  